<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="br.com.rogrs.autobot.domain.User" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Authority" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.User.authorities" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.PersistentToken" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Atividade" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Atividade.planos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Atividade.scripts" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Plugin" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Plugin.scripts" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Projeto" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Projeto.planos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Plano" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Script" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.ExecutarPlano" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Plano.atividades" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Plano.executarPlanos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Script.atividades" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Script.executarPlanos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.Script.planos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.ExecutarPlano.logExecutarPlanos" uses-template="simple"/>

    <cache alias="br.com.rogrs.autobot.domain.LogExecutarPlano" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
