<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Atividade.
    -->
    <changeSet id="20150827141445" author="jhipster">
        <createTable tableName="ATIVIDADE">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="descricao" type="varchar(255)"/>
            <column name="detalhe" type="varchar(255)"/>
            <column name="falha_para" type="integer"/>
            <column name="plano_id" type="bigint"/>
            <column name="script_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="plano_id"
                                 baseTableName="ATIVIDADE"
                                 constraintName="fk_atividade_plano_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PLANO"/>

        <addForeignKeyConstraint baseColumnNames="script_id"
                                 baseTableName="ATIVIDADE"
                                 constraintName="fk_atividade_script_id"
                                 referencedColumnNames="id"
                                 referencedTableName="SCRIPT"/>

    </changeSet>
</databaseChangeLog>
