<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ExecutarPlano.
    -->
    <changeSet id="20150909210327" author="jhipster">
        <createTable tableName="EXECUTARPLANO">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="criado" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="inicio" type="timestamp"/>
            <column name="finalizado" type="timestamp"/>
            <column name="atividade_id" type="bigint"/>
            <column name="login" type="varchar(50)"/>
            <column name="status" type="varchar(20)"/>
        </createTable>
        <dropDefaultValue tableName="EXECUTARPLANO" columnName="criado" columnDataType="datetime"/>

        <dropDefaultValue tableName="EXECUTARPLANO" columnName="inicio" columnDataType="datetime"/>

        <dropDefaultValue tableName="EXECUTARPLANO" columnName="finalizado" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="atividade_id"
                                 baseTableName="EXECUTARPLANO"
                                 constraintName="fk_executarplano_atividade_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ATIVIDADE"/>

    </changeSet>
</databaseChangeLog>
